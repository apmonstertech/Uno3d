<div class="container h-100">
    <div class="row d-flex  flex-column justify-content-center align-items-center h-100">
        <div class="col-sm-10 h-75">
            <h2>Zaloguj</h2>

            <form action="/users/login" method="POST" autocomplete="off">
                <div class="form-group">
                    <input type="text" class="form-control form-control-input" name="username" id="username" style="background-color: transparent"
                        placeholder="Wprowadź swoją nazwę użytkownika">
                    <label for="usernameLogin" class="form-control-title">NAZWA UŻYTKOWNIKA</label>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control form-control-input" name="password" id="password" style="background-color: transparent"
                        placeholder="Wprowadź swoje hasło">
                    <label for="passwordLogin" class="form-control-title">HASŁo</label>
                </div>
                <button class="btn btn-control login">Zaloguj</button>
            </form>

            {{#if errors}}
            <div class="errors">
                <h1> {{errors}}</h1>
            </div>
            {{/if}}
        </div>
    </div>
</div>